<?xml version="1.0" encoding="UTF-8"?>
<theme>
 	<formatVersion>7</formatVersion>

	<view name="screen">
		<!-- Batery and Network indicator -->
		<batteryIndicator name="batteryIndicator">
			<color>${systemColorGray}</color>
			<pos>0.800 0.035</pos>
			<origin>0 0</origin>
			<size>0.09 0.028</size>
		</batteryIndicator>

		<text name="clock">
			<color>${systemColorGray}</color>
			<fontPath>./../fonts/SairaCondensed-Light.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<pos>0.900 0.02</pos>
			<origin>0 0</origin>
			<size>0.09 0.058</size>
			<alignment>left</alignment>
			<verticalAlignment>center</verticalAlignment>
		</text>

		<controllerActivity name="controllerActivity">
			<pos>0.04 0.955</pos>
			<origin>0 0</origin>
			<size>0.035 0.035</size>
			<itemSpacing>0.003</itemSpacing>
			<imagePath>./../icons/gamepad.svg</imagePath>
			<gunPath>./../icons/gun.svg</gunPath>
			<color>${systemColorGray}</color>
			<activityColor>${systemColorBlue}</activityColor>
			<hotkeyColor>${systemColorBlue}</hotkeyColor>
		</controllerActivity>
  	</view>
</theme>