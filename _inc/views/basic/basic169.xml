<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>7</formatVersion>

	<view name="basic">
		<image name="background">
		<path>./../../backgrounds/169/bgbasic.png</path>
		</image>
			
		<!--Up arrow -->
		<image name="Chevron Haut">
			<color>${systemColorBlue}</color>
			<pos>0.5 0.210</pos>
		</image>

		<textlist name="gamelist" ifSubset="selectorstyle:bar">
			<scrollSound>./../../sounds/scroll.wav</scrollSound>
			<selectorImagePath>./../../assets/bar.png</selectorImagePath>
			<selectorColor>${systemColorRed}</selectorColor>
			<primaryColor>${systemColorWhite}</primaryColor>
			<secondaryColor>${systemColorGray}</secondaryColor>
			<fontSize>0.034</fontSize>
			<fontPath>./../../fonts/Saira_SemiCondensed-Bold.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.25 0.255</pos>
			<size>0.5 0.52</size>
			<glowColor>${systemColorGray}</glowColor>
			<glowSize>1.5</glowSize>
			<glowOffset>1.5 1.5</glowOffset>
			<lines>11</lines>
			<alignment>center</alignment>
		</textlist>

		<!--Down arrow -->	
		<image name="Chevron Bas">
			<color>${systemColorBlue}</color>
			<pos>0.5 0.825</pos>
		</image>
		
		<!-- Help buttons -->
		<helpsystem name="help">
			<pos>0.24 0.96</pos>
		</helpsystem>

		<image name="es_player">
			<visible>false</visible>
		</image>

		<text name="logoText">
			<visible>false</visible>
		</text>
	</view>
    
</theme>   
